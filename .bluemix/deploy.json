{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/deploy.title"
  },
  "description": {
    "$ref": "#/messages/deploy.description"
  },
  "longDescription": {
    "$ref": "#/messages/deploy.longDescription"
  },
  "type": "object",
  "properties": {
    "api-key": {
      "description": {
        "$ref": "#/messages/deploy.apikeyDescription"
      },
      "type": "string",
      "pattern": "\\S",
      "validator": {
        "v-type": "api-key"
      }
    },
    "base-name": {
      "description": {
        "$ref": "#/messages/deploy.baseNameDescription"
      },
      "type": "string",
      "pattern": "\\S"
    }
  },
  "required": [
    "api-key",
    "base-name"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/validator/validator-v1.html"
    },
    {
      "type": "password",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.apikey"
      },
      "key": "api-key"
    },
    {
      "type": "text",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.baseName"
      },
      "key": "base-name"
    }
  ]
}